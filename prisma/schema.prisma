datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model clCase {
  id           String    @id @default(uuid())
  Vitals       Vitals[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  isShared     Boolean?  @default(false)
  sharePass    String?
  editPass     String?
  expiresOn    DateTime?
  ptGender     String
  ptAgeUnit    String
  ptAge        Int
  ptWt         Int?
  ptWtUnit     String?
  ptHt         Int?
  ptHtUnit     String?
  complaint    String?
  note         String?
  clCaseStatus String?
  ptStatus     String?
}

model Vitals {
  id            String   @id @default(uuid())
  clCase        clCase?  @relation(fields: [clCaseId], references: [id], onDelete: Cascade)
  clCaseId      String?
  entryDateTime String?
  createdAt     DateTime @default(now())
  gcsTotal      Int?
  gcsE          Int?
  gcsV          Int?
  gcsM          Int?
  rr            Int?
  spo2          Int?
  etco2         Int?
  pr            Int?
  sbp           Int?
  dbp           Int?
  map           Int?
  ecg4          String?
  ecg12         String?
  temp          Float?
  tempUnit      String?
  bgl           Int?
  bglUnit       String?
  urineOut      Int?
  shockIndex    Float?
  rts           Float?
  pain          Int?
  note          String?

  @@index([clCaseId])
}
